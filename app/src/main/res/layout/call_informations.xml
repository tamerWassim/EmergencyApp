<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <Spinner
        android:id="@+id/wilaya_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/wilaya_entries"
        android:background="@drawable/text_view_theme"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
    </Spinner>

    <Spinner
        android:id="@+id/dayra_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/dayra_entries"
        android:background="@drawable/text_view_theme"
        android:layout_marginBottom="20dp">
    </Spinner>

    <Spinner
        android:id="@+id/emergency_type_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/emergency_type_entries"
        android:background="@drawable/text_view_theme"
        android:layout_marginBottom="20dp">
    </Spinner>

    <Button
        android:id="@+id/confirm_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Confirm"
        android:background="@drawable/text_view_theme"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"/>


</LinearLayout>