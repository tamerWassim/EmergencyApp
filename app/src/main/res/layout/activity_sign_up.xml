<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="add"
    tools:context=".SignUp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="50dp">


                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/text_view_theme"
                    android:drawableStart="@drawable/gender"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="first name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/text_view_theme"
                    android:drawableStart="@drawable/gender"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="last name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/text_view_theme"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingStart="20dp"
                    android:drawableStart="@drawable/gender"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:entries="@array/Gender"/>

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/text_view_theme"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="phone number"
                    android:inputType="phone"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/text_view_theme"
                    android:drawableStart="@drawable/ic_baseline"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/pass_word"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/text_view_theme"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/adress"
                    android:hint="adress"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/text_view_theme"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:textSize="24sp"/>

                <EditText
                    android:id="@+id/pathologies"

                    android:ems="10"
                    android:hint="Enter your pathologies"
                    android:inputType="textMultiLine"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/text_view_theme"
                    android:drawablePadding="12dp"
                    />

                <EditText
                    android:id="@+id/year_of_birth"

                    android:background="@drawable/text_view_theme"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="year of birth"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    />

                <Spinner
                    android:id="@+id/blood_group_spinner"
                    android:background="@drawable/text_view_theme"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="year of birth"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                  />

                <CheckBox
                    android:id="@+id/rescue_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/agent"
                    android:layout_gravity="center"
                    android:text=" Velonteer as a Rescue Agent"
                    android:textSize="24sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/more_informations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

            </LinearLayout>

            <Button
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/log_button"
                android:drawableStart="@drawable/ic_baseline_check_24"
                android:text="Sign Up"
                android:textColor="@android:color/background_dark"
                android:textSize="22sp"
                tools:layout_editor_absoluteY="512dp" />

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>