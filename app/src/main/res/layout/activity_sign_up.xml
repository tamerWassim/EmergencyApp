<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTintMode="add"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/menu"
            android:src="@drawable/logo" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menu"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FBFBFB"
            android:textSize="36sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/menu"/>
        <Button
            android:id="@+id/back_to_login"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_view_theme"
            android:drawableStart="@drawable/ic_back_to_login"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="50dp"
            android:textColor="@color/menu"
            android:textStyle="bold" />



        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">


                    <EditText
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawableStart="@drawable/gender"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="first name"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />


                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawableStart="@drawable/gender"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="last name"
                        android:paddingEnd="20dp"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <Spinner
                        android:id="@+id/gender_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawableStart="@drawable/gender"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:entries="@array/Gender"
                        android:inputType="phone"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawableStart="@drawable/phone"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="phone number"
                        android:inputType="phone"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />


                    <EditText
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawableStart="@drawable/ic_baseline"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/pass_word"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:paddingEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/adress"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawableStart="@drawable/ic_adresse"
                        android:drawablePadding="12dp"
                        android:paddingEnd="20dp"
                        android:ems="10"
                        android:hint="adress"

                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/pathologies"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:paddingEnd="20dp"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint=" pathologies"
                        android:inputType="textMultiLine"
                        android:drawableStart="@drawable/ic_pathologies_icon"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/yearOfBirth"

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="year of birth"
                        android:drawableStart="@drawable/ic_year_of_birth"
                        android:inputType="number"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <Spinner
                        android:id="@+id/blood_group_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/text_view_theme"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:inputType="number"
                        android:paddingStart="20dp"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <CheckBox
                        android:id="@+id/rescue_agent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:drawableStart="@drawable/agent"
                        android:text=" Velonteer(Rescue Agent)"
                        android:textSize="24sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/more_informations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/sign"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"

                    android:layout_marginRight="20dp"

                    android:background="@drawable/log_button"
                    android:drawableStart="@drawable/ic_signup"
                    android:paddingStart="100dp"
                    android:paddingEnd="100dp"


                    android:text="Sign Up"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/menu"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">


                    />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>